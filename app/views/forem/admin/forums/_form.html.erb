<div class="row">
	<div class="span12">
		<%= simple_form_for [forem, :admin, @forum], html: { class: "well" } do |f| %>
		  <%= f.association :category, :include_blank => false %>
		  <%= f.input :title %>
		  <%= f.input :description, :as => :text %>

		  <h3><%= t('forem.moderator_groups') %></h3>
		  <%= f.association :moderators, :as => :check_boxes %>
		  <%= f.button :submit %>
		<% end %>
	</div>
</div>
