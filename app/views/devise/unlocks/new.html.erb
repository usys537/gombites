<div class="row">
	<div class="span4">
		<%= simple_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }, , html: { class: "well" } ) do |f| %>
		<%= devise_error_messages! %>

		  <fieldset>
		  	<legend><h2>Resend unlock instructions</h2>
		  		<%= f.input :email %>
		  		<%= f.button :submit "Resend unlock instructions" %>
			</legend>
		  </fieldset>

		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>


